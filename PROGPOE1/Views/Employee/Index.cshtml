@model IEnumerable<PROGPOE1.Models.DBEntities.Farmer>

@{
    ViewData["Title"] = "Employee Dashboard";
}

<h2>Farmer Profiles</h2>

<a class="btn btn-primary" href="/Employee/AddFarmer">Add Farmer Profile</a>
<a class="btn btn-secondary" href="/Employee/ViewProducts">View & Filter Products</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Farm Name</th>
            <th>Location</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td>@farmer.FullName</td>
                <td>@farmer.Username</td>
                <td>@farmer.Email</td>
                <td>@farmer.FarmName</td>
                <td>@farmer.Location</td>
            </tr>
        }
    </tbody>
</table>
